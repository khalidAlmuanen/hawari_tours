model Tour {
  id              String        @id @default(cuid())
  title           String
  titleAr         String
  slug            String        @unique
  description     String        @db.Text
  descriptionAr   String        @db.Text
  price           Float
  discount        Float?        @default(0)
  duration        Int           // ÙÙŠ Ø§Ù„Ø£ÙŠØ§Ù…
  maxPeople       Int
  difficulty      Difficulty    @default(MODERATE)
  category        TourCategory
  featured        Boolean       @default(false)
  isActive        Boolean       @default(true)
  
  // Media
  coverImage      String
  images          String[]
  videoUrl        String?
  
  // Location
  location        String
  locationAr      String
  latitude        Float?
  longitude       Float?
  
  // Itinerary
  itinerary       Json?         // ØªÙØ§ØµÙŠÙ„ Ø§Ù„Ø¨Ø±Ù†Ø§Ù…Ø¬ Ø§Ù„ÙŠÙˆÙ…ÙŠ
  
  // Includes/Excludes
  includes        String[]
  excludes        String[]
  
  // Stats
  rating          Float         @default(0)
  reviewsCount    Int           @default(0)
  bookingsCount   Int           @default(0)
  viewsCount      Int           @default(0)
  
  // SEO
  metaTitle       String?
  metaDescription String?
  keywords        String[]
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  bookings        Booking[]
  reviews         Review[]
  tourDates       TourDate[]
  
  @@map("tours")
  @@index([slug])
  @@index([category])
  @@index([featured])
}

enum Difficulty {
  EASY
  MODERATE
  CHALLENGING
  DIFFICULT
}

enum TourCategory {
  ADVENTURE
  CULTURAL
  NATURE
  BEACH
  WILDLIFE
  HERITAGE
}

model TourDate {
  id              String    @id @default(cuid())
  tourId          String
  startDate       DateTime
  endDate         DateTime
  availableSpots  Int
  price           Float
  isActive        Boolean   @default(true)
  
  tour            Tour      @relation(fields: [tourId], references: [id], onDelete: Cascade)
  
  @@map("tour_dates")
  @@index([tourId])
  @@index([startDate])
}

